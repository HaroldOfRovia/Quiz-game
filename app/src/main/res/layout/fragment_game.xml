<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".game.GameFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/quiz_name"
                style="@style/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:text="@string/question_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/question"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quiz_name" />

            <Button
                android:id="@+id/answerBtn1"
                android:layout_width="145dp"
                android:layout_height="80dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="100dp"
                android:text="Button"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/answerBtn2"
                android:layout_width="145dp"
                android:layout_height="80dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="40dp"
                android:text="Button"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/answerBtn1"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/answerBtn3"
                android:layout_width="145dp"
                android:layout_height="80dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="40dp"
                android:text="Button"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/answerBtn4"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/answerBtn4"
                android:layout_width="145dp"
                android:layout_height="80dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="100dp"
                android:text="Button"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>