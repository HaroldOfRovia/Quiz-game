<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/titleFragment">
    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.quiz.TitleFragment"
        android:label="TitleFragment" >
        <action
            android:id="@+id/action_titleFragment_self"
            app:destination="@id/titleFragment"
            app:popUpTo="@id/titleFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_titleFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.quiz.GameFragment"
        android:label="GameFragment" >
        <argument
            android:name="topicID"
            app:argType="integer" />
        <argument
            android:name="quizID"
            app:argType="integer" />
        <action
            android:id="@+id/action_gameFragment_to_gameEndFragment"
            app:destination="@id/gameEndFragment"
            app:popUpTo="@id/gameFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/gameEndFragment"
        android:name="com.example.quiz.GameEndFragment"
        android:label="fragment_game_end"
        tools:layout="@layout/fragment_game_end">
        <action
            android:id="@+id/action_gameEndFragment_to_titleFragment"
            app:destination="@id/titleFragment"
            app:popUpTo="@id/titleFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="win"
            app:argType="boolean" />
    </fragment>
</navigation>